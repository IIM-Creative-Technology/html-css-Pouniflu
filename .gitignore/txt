// Boucle foreach pour afficher chaque poll
    sondages.forEach(question => {

        // Afficher la question
        document.getElementById('title').innerHTML = question[0];

        // Afficher les r√©ponses
        let FirstChoice = document.getElementById('choice1');
        let SecondChoice = document.getElementById('choice2');
        let ThirdChoice = document.getElementById('choice3');
        let FourthChoice = document.getElementById('choice4');

        FirstChoice.innerHTML = question[1][0].choice;
        SecondChoice.innerHTML = question[1][1].choice;
        ThirdChoice.innerHTML = question[1][2].choice;
        FourthChoice.innerHTML = question[1][3].choice;

        function change(number) {
            
            console.log(question[1][number].isRight);

            if (question[1][number].isRight = true) {
                score++;  
            };

        }

        FirstChoice.addEventListener("click", change(0));
        SecondChoice.addEventListener("click", change(1));
        ThirdChoice.addEventListener("click", change(2));
        FourthChoice.addEventListener("click", change(3));


    });

    // Si on clique dessus et que isRight = True, alors on met +1 dans une variable